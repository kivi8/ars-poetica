    <body>
        <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->           
    
        <div class="container">
            
            <header class="col-md-12 logo-main"> 
                                
                <a href="/">
                    <div class="logo-text"></div>
                </a>
                      
                <ul class="navbar-secondary">
                    <li class="searchForm">
                        {form searchForm}                                                       
                            {input find}
                            {input search} 
                        {/form}
                        
                    </li>
                    <li>
                        <a n:href=":Homepage:kontakt">
                            <div n:class="$presenter->isLinkCurrent('Homepage:kontakt')?active-top-menu">Kontakt <i class="fa fa-book fa-lg"></i></div>
                        </a>
                    </li>
                    <li>
                        <a n:href=":Homepage:o-nas">
                            <div n:class="$presenter->isLinkCurrent('Homepage:o-nas')?active-top-menu">O nás <i class="fa fa-info fa-lg"></i></div>
                        </a>
                    </li>
                    <li>
                        <a n:href=":Homepage:diskuze">
                           <div n:class="$presenter->isLinkCurrent('Homepage:diskuze')?active-top-menu">Diskuze <i class="fa fa-comments-o fa-lg"></i></div>
                        </a>
                    </li>
                    <li>
                        <a n:href=":Homepage:redakce">
                            <div n:class="$presenter->isLinkCurrent('Homepage:redakce')?active-top-menu">Redakce <i class="fa fa-users fa-lg"></i></div>
                        </a>
                    </li>
                </ul>
                
            </header>
                
            <div class="clearfix"></div>
            
            <noscript>
                Pro plnou funkčnost těchto stránek je nutné povolit JavaScript.
                Zde jsou <a href="http://www.enable-javascript.com/cz/" target="_blank">
                instrukce jak povolit JavaScript ve Vašem webovém prohlížeči</a>.
            </noscript>
            
            <nav n:snippet="menu" class="navbar navbar-default navbar-static-top">
                <div class="container-fluid">

                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            
                        {foreach $menu as $menuItem} 
                            {var current = $presenter->isLinkCurrent(':Article:', ['section' => $menuItem->url])}

                            <li class="{if $current}active {/if} nav-main">
                                <a n:href="':Article:'.$menuItem->url">
                                    {$menuItem->name}
                                    <span n:if="$current" class="sr-only">(current)</span>
                                </a>
                            </li>
                        {/foreach}    
                        </ul>      
                                    
                        <ul class="nav navbar-nav navbar-right">
                                                                                  
                            {if $user->isLoggedIn()}
                                
                                <li n:if="$user->isAllowed('Admin', 'can')" n:class="$presenter->isLinkCurrent(':Admin:Homepage:default')?active">
                                    <a n:href=":Admin:Homepage:default">Administrace</a>
                                    <span n:if="$presenter->isLinkCurrent(':Admin:Homepage:default')" class="sr-only">(current)</span>
                                </li>                                                              
                                         
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{App\Helper\Helper::combineUserName($user->getIdentity()->data)} <span class="caret"></span></a>
                                                             
                                    <ul class="dropdown-menu">
                                        <li n:class="$presenter->isLinkCurrent(':Setting:')?active">
                                            <a n:href=":Setting:">Osobní nastavení</a>
                                            <span n:if="$presenter->isLinkCurrent(':Setting:')" class="sr-only">(current)</span>
                                        </li>    
                                
                                        <li>
                                            <a n:href=":Log:out">Odhlásit <i class="fa fa-sign-out"></i></a>
                                        </li> 
                                    </ul>   
                                    
                                    </li>
                            {else}
                                <li n:class="$presenter->isLinkCurrent(':Log:in')?active">
                                    <a n:href=":Log:in">Přihlásit <i class="fa fa-sign-in"></i></a>
                                    <span n:if="$presenter->isLinkCurrent(':Log:in')" class="sr-only">(current)</span>
                                </li>
                                
                                <li n:class="$presenter->isLinkCurrent(':Log:register')?active">
                                    <a n:href=":Log:register">Registrovat</a>
                                    <span n:if="$presenter->isLinkCurrent(':Log:register')" class="sr-only">(current)</span>
                                <li>  
                            {/if}  
                            
                            
                        </ul>             
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>              
                
            <div class="col-md-9">
                
            {snippet flashMessage}
                <div n:foreach="$flashes as $flash" n:class="alert, 'alert-'.$flash->type">{$flash->message}</div>
            {/snippet}
            
            <div n:ifset="title" div class="page-header"><h1>{include title}</h1></div>
                        
            
                <article>   
                    {include content}
                </article>
            </div>    
                             
            <aside class="col-md-3">                               
                
                {ifset right-column}
                    {include right-column}
                    <hr>
                {/ifset}      
                 
                <a n:href=":SendArticle:">Poslat do redakce</a>
                    <hr>
                   
                {control news}
                               
            </aside>
                           
            
            <footer class="col-md-12">
                <hr>
                <p>&copy; {date("Y")} arspoetica.net | Všechny materiály pod licencí <a n:href="Homepage:creativeCommons">CC BY-NC-SA 3.0</a> | Kryštof Trkovský - webadmin - developer</p>
            </footer> 
        </div>
        
         
           
        {ifset #hide}    
            <script>
                $('.hide-box').css('display','none');
    
                $('.arrowText').on('click',function (){
                    var txt = $(this).next('.hide-box'); 
                    if(txt.css('display') === 'none'){
                        txt.show(200);
                        $(this).children('.arrow').css('transform', 'rotate(-180deg)');
                    }
                    else{
                        txt.hide(100);
                        $(this).children('.arrow').css('transform', 'rotate(0deg)');
                    }
                }); 
            </script>
        {/ifset}            
                
    {ifset #script}
        {include script}
    {/ifset}  
        
        
    
    </body>
</html>
